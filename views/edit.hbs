<form action="/record/{{spend._id}}?_method=PUT" class="col-6 m-auto mt-5" method="POST">
  <h2 class="text-center mb-3">Enter your spend</h2>
  {{> message}}
  <div class="mb-3 row">
    <label for="name" class="col-sm-2 col-form-label">Name:</label>
    <div class="col-sm-10">
      <input
        type="text"
        class="form-control"
        id="name"
        name="name"
        value="{{spend.name}}"
        required
      />
    </div>
  </div>
  <div class="mb-3 row">
    <label for="date" class="col-sm-2 col-form-label">Date:</label>
    <div class="col-sm-10">
      <input
        type="date"
        class="form-control"
        id="date"
        name="date"
        value="{{spend.date}}"
        required
      />
    </div>
  </div>
  <div class="mb-3 row">
    <label for="category" class="col-sm-2 col-form-label">Category:</label>
    <div class="col-sm-10">
      <select class="form-control" id="category" name="category"required>
        <option value="">Select category</option>
        {{#each categories}}
        <option value="{{this._id}}" {{#if this.selected}} selected {{/if}}>{{this.name}}</option>
        {{/each}}
      </select>
    </div>
  </div>
  <div class="mb-3 row">
    <label for="amount" class="col-sm-2 col-form-label">Amount:</label>
    <div class="col-sm-10">
      <input
        type="text"
        class="form-control"
        id="amount"
        name="amount"
        value="{{spend.amount}}"
        required
      />
    </div>
  </div>
  <div class="d-flex justify-content-center">
    <button
      type="submit"
      class="btn btn-outline-dark"
      style="width: 100px"
    >Save</button>
  </div>
</form>

