<div class="row">
  <div class="col-6 m-auto mt-5">
    <form action="/">
      <select
        class="form-select category-select"
        aria-label="Default select example"
        name="category"
        onchange="this.form.submit()"
      >
        <option value="">Select category</option>
        {{#each categories}}
        <option value="{{this._id}}" {{#if this.selected}} selected {{/if}}>{{this.name}}</option>
        {{/each}}
        
      </select>
    </form>
    {{! amount display }}
    <div class="conatiner mt-5 text-center">
      <div class="row total-price m-2">
        <p class="col-4 mt-3">Total Spand:</p>
        <p class="col-4 fs-1 text-danger">{{totalAmount}}</p>
      </div>
      <table class="table table-striped">
        <tbody>
          {{#each spendList}}
            <tr class="text-center align-middle">
              <th class="col-4" scope="row"><i class="{{this.category.iconUrl}} me-2"></i>{{this.name}}</th>
              <td class="col-4">{{this.date}}</td>
              <td class="col-4">{{this.amount}}</td>
              <td class="col-4">
                <div class="d-flex align-middle">
                  <a href="/record/{{this._id}}" class="btn btn-sm me-2">Edit</a>
                  <form action="/record/{{this._id}}?_method=DELETE" method="POST" class="m-0">
                    <button class="btn btn-sm text-danger">Delete</button>
                  </form>
                </div>
              </td>
            </tr>
          {{/each}}
        </tbody>
      </table>
      <a href="/record/new" class="btn btn-warning mt-3">New spend</a>
    </div>
  </div>
</div>