<div class="row">
  <div class="col-6 m-auto mt-5">
    <form action="/">
      <select
        class="form-select category-select"
        aria-label="Default select example"
        name="category"
        onchange="this.form.submit()"
      >
        <option>Select category</option>
        <option value="1" {{#if category.[1]}} selected {{/if}}>One</option>
        <option value="2" {{#if category.[2]}} selected {{/if}}>Two</option>
        <option value="3" {{#if category.[3]}} selected {{/if}}>Three</option>
      </select>
    </form>
    {{! amount display }}
    <div class="conatiner mt-5 text-center">
      <div class="row total-price m-2">
        <p class="col-4 mt-3">Total Spand:</p>
        <p class="col-4 fs-1 text-danger">2560</p>
      </div>
      <table class="table table-striped">
        <tbody>
          {{#each spendList}}
            <tr class="text-center">
              <th class="col-4" scope="row">{{this.category}}{{this.name}}</th>
              <td class="col-4">{{this.formattedDate}}</td>
              <td class="col-4">{{this.amount}}</td>
              <td class="col-4">
                <a href="/{{this._id}}">Edit</a>
                <form action="/{{this._id}}/delete" method="POST">
                  <button href="/delete">Delete</button>
                </form>
              </td>
            </tr>
          {{/each}}
        </tbody>
      </table>
      <a href="/new" class="btn btn-warning mt-3">New spend</a>
    </div>
  </div>
</div>